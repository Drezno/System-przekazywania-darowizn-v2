    ViewData["Title"] = "Rejestracja organizacji pozarządowej";
}



<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Stwórz nowe konto.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Input.Firma">Nazwa firmy*</label>
                <input asp-for="Input.Firma" class="form-control" />
                <span asp-validation-for="Input.Firma" class="text-danger"></span>
